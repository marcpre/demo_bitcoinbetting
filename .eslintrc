{
    "env": {
        "node": true,
        "jest": true
    },
    "extends": "airbnb-base",
    "rules": {
        "semi": [2, "never"],
        "no-unexpected-multiline": 2,
        "no-underscore-dangle": 0,
        "no-console": 0,
        "radix": 0,
        "camelcase": 0,
        "no-param-reassign": 0,
        "space-before-function-paren": 0,
        "max-len": ["error", 120, 2,
            {
                "ignoreUrls": true,
                "ignoreComments": false,
                "ignoreRegExpLiterals": true,
                "ignoreStrings": true,
                "ignoreTemplateLiterals": true
            }
        ]
    }
}
